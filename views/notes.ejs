<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Notes</title>
</head>
<body>
    <h1>All Notes</h1>
    <a href="/add">Add New Note</a>
    <% if (notes.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody>
                <% notes.forEach(function(note) { %>
                    <tr>
                        <td><%= note.title %></td>
                        <td><%= note.content %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No notes available.</p>
    <% } %>
</body>
</html>
